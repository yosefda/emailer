{
    "name": "emailer",
    "version": "0.0.1",
    "description": "API to send emails using different email service providers.",
    "main": "index.js",
    "scripts": {
        "test-dev": "mocha --exit --recursive --check-leaks --use_strict tests",
        "test": "nyc --reporter=text --reporter=clover npm run test-dev",
        "watch": "mocha --watch --recursive --reporter min tests/"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "body-parser": "^1.20.1",
        "express": "^4.18.2",
        "winston": "^3.2.1",
        "lodash": "^4.17.14",
        "email-validator": "^2.0.4"
    },
    "devDependencies": {
        "axios-mock-adapter": "^1.17.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "husky": "^3.0.0",
        "mocha": "^6.1.4",
        "nock": "^10.0.6",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "rewire": "^4.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "nyc": {
        "report-dir": "__output",
        "exclude": "tests/*"
    }
}
